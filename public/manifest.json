{
  "manifest_version": 3,
  "name": "Copy URL",
  "version": "1.0.0",
  "description": "いい感じでURLをコピーする",
  "permissions": ["contextMenus", "scripting"],
  "action": {},
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://www.amazon.co.jp/*",
    "https://stackoverflow.com/*"
  ],
  "background": {
    "matches": [
      "https://www.youtube.com/*",
      "https://www.amazon.co.jp/*",
      "https://stackoverflow.com/*"
    ],
    "service_worker": "js/background.js"
  }
}
